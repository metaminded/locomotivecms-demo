---
title: Home page
handle: homepage
listed: true
published: true
cache_strategy: none
response_type: text/html
position: 0
editable_elements:
  main/welcome_message: Welcome to Acme, the world's favorite cartoon company.
---
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{ page.title }} | {{ site.name }}</title>
    {{ 'styles.css' | stylesheet_tag }}
  </head>
  <body>
    {{ 'logo.png' | theme_image_tag: 'alt:Logo' }}
    <hr>
    {% locale_switcher %}
    <hr>
    {% link_to homepage %}
    {% nav 'parent' %}
    <hr>

    <div id="content">
      <h1>{{ page.title }}</h1>

      {% block 'main' %}
        <p>
          {% editable_text "welcome_message" %}
            Welcome to Acme, the world's favorite cartoon company.
          {% endeditable_text %}
        </p>
      {% endblock %}
    </div>
  </body>
</html>
